{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,   
    "importHelpers": true,
    "target": "es5",
    //"target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node"],
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true, // for adding JS file
    //====for using moment.js == https://stackoverflow.com/questions/54766706/moment-has-no-exported-member-default
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule" :true, // for allowing json file import to a module.
  },
  "angularCompilerOptions": { "fullTemplateTypeCheck": true, "strictInjectionParameters": true, "enableIvy": false } //to solve JIT Compilation error 
}
